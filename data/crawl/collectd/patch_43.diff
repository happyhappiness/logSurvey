+static void enable_field (curl_stats_t *s, size_t offset)
+{
+	*(bool *)((char *)s + offset) = true;
+} /* enable_field */
+
+static bool field_enabled (curl_stats_t *s, size_t offset)
+{
+	return *(bool *)((char *)s + offset);
+} /* field_enabled */
