+	CURLcode code;
+	value_t v;
+
+	code = curl_easy_getinfo (curl, info, &v.gauge);
+	if (code != CURLE_OK)
+		return -1;
+
+	v.gauge *= 8;
+
+	vl->values = &v;
+	vl->values_len = 1;
+
+	return plugin_dispatch_values (vl);
+} /* dispatch_speed */
