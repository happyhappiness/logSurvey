+  if (setsockopt(g_chrony_socket, SOL_SOCKET,
+      SO_RCVTIMEO, (char *) &tv, sizeof(struct timeval)) < 0)
+  {
+    return CHRONY_RC_FAIL;
+  }
+  return CHRONY_RC_OK;
